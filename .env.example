# ========================================
# Node Configuration
# ========================================

# Node identification (leave empty for auto-registration)
NODE_ID=

# Node name (will be displayed in admin panel)
NODE_NAME=Moscow-1

# Public hostname or IP address
NODE_HOSTNAME=node1.example.com

# Public IP address
NODE_IP=1.2.3.4

# VPN port (usually 443)
NODE_PORT=443

# ========================================
# Location
# ========================================

NODE_COUNTRY=Russia
NODE_COUNTRY_CODE=RU
NODE_CITY=Moscow

# ========================================
# REALITY Keys
# ========================================
# Generate with: ./scripts/generate_reality_keys.sh

# Private key (keep secret!)
REALITY_PRIVATE_KEY=your-private-key-here

# Public key (will be stored in database)
REALITY_PUBLIC_KEY=your-public-key-here

# Short ID
REALITY_SHORT_ID=your-short-id-here

# ========================================
# SNI Masking
# ========================================
# Domain to mask VPN traffic as (default: vk.com)
NODE_SNI=vk.com

# ========================================
# Main Server Connection
# ========================================

# Main server URL
MAIN_SERVER_URL=https://sfkt.mxl.wtf

# Node API key (must match NODE_API_SECRET on main server)
NODE_API_KEY=your-node-api-secret-from-main-server

# ========================================
# Sync Intervals (in seconds)
# ========================================

# Traffic sync interval (default: 30 seconds)
SYNC_INTERVAL=30

# Health check interval (default: 60 seconds)
HEALTH_CHECK_INTERVAL=60

# User sync interval (default: 60 seconds)
USER_SYNC_INTERVAL=60

# ========================================
# Xray Configuration
# ========================================

# Xray inbound tag (must match config.json)
INBOUND_TAG=vless-in
